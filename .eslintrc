{
	"env": {
		"browser": true,
		"amd": true,
		"node": true,
		"mocha": true
	},
	"rules": {
        "linebreak-style": [2, "windows"],
        "semi": [2, "always"],
        "indent": [2, "tab"],
		"quotes": [2, "single"],
		"no-unused-expressions": 0,
		"no-new": 0,
		"no-wrap-func": 0,
		"no-use-before-define": 0,
		"eqeqeq": 0,
		// allow for unused variables defined in function arguments
		"no-unused-vars": [2, {"vars": "all", "args": "none"}],
		"consistent-return": 0,
		"no-constant-condition": 0,
		"no-cond-assign": 0,
		"no-empty": 0,
		"max-len": [1, 130, 4],
		"camelcase": 0,
		"space-infix-ops": 0,
		"eol-last": 0,
		"new-cap": 0
	}
}